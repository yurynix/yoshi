{
  "name": "yoshi-monorepo",
  "private": true,
  "customPublish": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/yoshi.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "// local dev": "------------------------------------------------------------------------------------",
    "lint": "eslint . --ext js,ts --max-warnings 0",
    "build": "ts-node -T scripts/build.ts",
    "watch": "ts-node -T scripts/build.ts --watch",
    "create-yoshi-app:dev": "npm run dev --prefix ./packages/create-yoshi-app",
    "website:dev": "npm start --prefix './website'",
    "clean-build": "rm -rf ./packages/*/build ./packages/*/tsconfig.tsbuildinfo",
    "clean": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules && npm run clean-build",
    "// publishing": "-----------------------------------------------------------------------------------",
    "changelog": "lerna-changelog",
    "createVersion": "node scripts/createVersion",
    "bumpDocs": "npm run version --prefix './website' --",
    "customPublish": "ts-node -T ./scripts/customPublish.ts",
    "test": ":",
    "// unit tests": "-----------------------------------------------------------------------------------",
    "test:unit": "jest --config='./jest.unit.config.js'",
    "// integration tests": "----------------------------------------------------------------------------",
    "test:integration:loaders:dev:js:fast": "npx jest ./test/javascript/features/loaders --runInBand -t=dev",
    "test:integration:loaders:prod:js:fast": "npx jest ./test/javascript/features/loaders --runInBand -t=prod",
    "test:integration:loaders:dev:ts:fast": "npx jest ./test/typescript/features/loaders --runInBand -t=dev",
    "test:integration:loaders:prod:ts:fast": "npx jest ./test/typescript/features/loaders --runInBand -t=prod",
    "test:integration:loaders:dev:js": "WITH_PUBLISH=true npx jest ./test/javascript/features/loaders --runInBand -t=dev",
    "test:integration:loaders:prod:js": "WITH_PUBLISH=true npx jest ./test/javascript/features/loaders --runInBand -t=prod",
    "test:integration:loaders:dev:ts": "WITH_PUBLISH=true npx jest ./test/typescript/features/loaders --runInBand -t=dev",
    "test:integration:loaders:prod:ts": "WITH_PUBLISH=true npx jest ./test/typescript/features/loaders --runInBand -t=prod",
    "test:integration:others:js:fast": "npx jest ./test/javascript --runInBand --testPathIgnorePatterns=./test/javascript/features/loaders",
    "test:integration:others:js": "WITH_PUBLISH=true npx jest ./test/javascript --runInBand --testPathIgnorePatterns=./test/javascript/features/loaders",
    "test:integration:others:ts:fast": "npx jest ./test/typescript --runInBand --testPathIgnorePatterns=./test/typescript/features/loaders",
    "test:integration:others:ts": "WITH_PUBLISH=true npx jest ./test/typescript --runInBand --testPathIgnorePatterns=./test/typescript/features/loaders",
    "// template tests": "-------------------------------------------------------------------------------",
    "test:templates:client": "npm run client --prefix ./packages/create-yoshi-app",
    "test:templates:fullstack": "npm run fullstack --prefix ./packages/create-yoshi-app",
    "test:templates:server": "npm run server --prefix ./packages/create-yoshi-app",
    "test:templates:library": "npm run library --prefix ./packages/create-yoshi-app",
    "test:templates:bm": "npm run bm --prefix ./packages/create-yoshi-app",
    "test:templates:ooi": "npm run ooi --prefix ./packages/create-yoshi-app",
    "test:templates:flow-bm": "npm run flow-bm --prefix ./packages/create-yoshi-app",
    "test:templates:flow-editor": "npm run flow-editor --prefix ./packages/create-yoshi-app",
    "// legacy tests": "---------------------------------------------------------------------------------",
    "test:legacy": "npm run test --prefix ./packages/yoshi-flow-legacy",
    "test:legacy:build": "npm run test:build --prefix ./packages/yoshi-flow-legacy",
    "test:legacy:start": "npm run test:start --prefix ./packages/yoshi-flow-legacy",
    "test:legacy:test": "npm run test:test --prefix ./packages/yoshi-flow-legacy",
    "test:legacy:others": "npm run test:others --prefix ./packages/yoshi-flow-legacy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "node scripts/post-merge"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --ext js,ts --max-warnings 0",
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "@lerna/project": "^3.18.0",
    "@types/async-retry": "^1.4.1",
    "@types/expect-puppeteer": "^4.4.0",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "24.9.1",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/lodash": "^4.14.147",
    "@types/puppeteer": "^1.2.0",
    "@types/semver": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "async-retry": "^1.2.3",
    "axios": "^0.19.0",
    "babel-eslint": "^10.0.0",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "chokidar": "^3.3.0",
    "cross-spawn": "^6.0.5",
    "eslint": "^6.6.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-wix-style-react": "^1.0.2",
    "execa": "^3.2.0",
    "expect": "^24.9.0",
    "express": "^4.16.3",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.3",
    "globby": "^9.0.0",
    "husky": "^4.2.1",
    "jest": "^24.1.0",
    "jest-environment-puppeteer": "^3.4.0",
    "jest-puppeteer": "^4.0.0",
    "jest-teamcity-reporter": "^0.9.0",
    "lerna": "^3.15.0",
    "lerna-changelog": "^0.8.3",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.15",
    "minimist": "^1.2.0",
    "mocha": "^5.2.0",
    "mocha-env-reporter": "^3.0.0",
    "mocha-teamcity-reporter": "^2.4.0",
    "multimatch": "^4.0.0",
    "prettier": "^1.19.1",
    "prompts": "^0.1.8",
    "puppeteer": "^1.13.0",
    "react": "^16.8.6",
    "retry-promise": "^1.0.0",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "serve": "^10.0.2",
    "shelljs": "^0.8.2",
    "string-length": "^3.1.0",
    "strip-ansi": "^4.0.0",
    "tempy": "^0.4.0",
    "terminate": "^2.1.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.16.0",
    "tslint-plugin-wix-style-react": "^1.0.6",
    "tslint-react-hooks": "^2.1.0",
    "type-fest": "^0.11.0",
    "typescript": "3.7.5",
    "verdaccio": "^4.3.5",
    "vfile-message": "^2.0.2",
    "wait-for-expect": "^1.2.0",
    "wait-port": "^0.2.2"
  },
  "resolutions": {
    "@types/node": "^12.0.0",
    "@types/webpack": "4.41.0",
    "@types/react": "16.9.15"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
